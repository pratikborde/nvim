{
  // "importCost.typescriptExtensions": [
  //  "\\.tsx?$"
  //],
  //"importCost.javascriptExtensions": [
  //  "\\.jsx?$",
  //  "\\.js?$"
  //],
  // "importCost.bundleSizeDecoration": "both",
  // "importCost.showCalculatingDecoration": true,
  // "importCost.debug": false,

  "typescript.referencesCodeLens.enable": true,
  "tsserver.enableJavascript": true,
  "tsserver.npm": "/usr/local/bin/npm",
  "tslint.enable": true,
  "tslint.autoFixOnSave": true,

  "prettier.eslintIntegration": false,
  "prettier.requireConfig": true,

  "eslint.enable": false,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "git.enableGutters": false,
  "git.realtimeGutters": false,
  // "git.virtualTextPrefix": "     ~  ",
  "git.addGBlameToVirtualText": true,

  "codeLens.enable": false,
  "diagnostic.errorSign": "✘",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic.checkCurrentLine": false,
  "diagnostic.virtualText": true,

  "snippets.ultisnips.directories": [
    "~/.vim/plugged/vim-snippets/snippets",
    "~/.vim/plugged/vim-javascript-snippets/snippets/javascript"
  ],
  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescriptreact": ["javascript", "javascript-jasmine-arrow"],
    "typescript": ["javascript", "javascript-jasmine-arrow"]
  },

  "suggest.noselect": false,
  "suggest.enablePreview": true,
  "suggest.removeDuplicateItems": true,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.floatEnable": true,

  "coc.preferences.jumpCommand": "drop",
  "coc.preferences.rootPatterns": [".git", ".vim", ".vscode"],
  "coc.preferences.snippets.enable": true,
  "coc.preferences.bracketEnterImprove": true,
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "Markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.useQuickfixForLocations": true,

  "list.previewSplitRight": false,
  "list.source.files.args": ["--hidden", "--files"],
  "list.source.grep.args": [
    "--max-depth=10", 
    "--hidden", 
    "--color", 
    "always", 
    "--follow"
  ]
}
