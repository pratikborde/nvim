{
  "typescript.referencesCodeLens.enable": true,
  "tsserver.enableJavascript": true,
  "tsserver.npm": "/usr/local/bin/npm",
  "tslint.enable": true,
  "tslint.autoFixOnSave": true,

  "prettier.eslintIntegration": false,
  "prettier.requireConfig": true,

  "eslint.enable": false,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "git.enableGutters": true,
  "git.realtimeGutters": true,
  "git.addedSign.text": "│",
  "git.addedSign.hlGroup": "CocAddSign",
  "git.removedSign.text": "│",
  "git.removedSign.hlGroup": "CocDeleteSign",
  "git.changedSign.text": "│",
  "git.changedSign.hlGroup": "CocChangeSign",
  "git.topRemovedSign.text": "│",
  "git.topRemovedSign.hlGroup": "CocTopRemovedSign",
  "git.changeRemovedSign.text": "│",
  "git.changeRemovedSign.hlGroup": "CocChangeRemovedSign",
  "git.addGBlameToVirtualText": true,

  "codeLens.enable": false,
  "diagnostic.errorSign": "e",
  "diagnostic.warningSign": "w",
  "diagnostic.infoSign": "i",
  "diagnostic.hintSign": "H",
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic.locationlist": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": false, // virtual text conflicts with blame
  "diagnostic.messageTarget": "float",
  "vimlsp.diagnostic.enable": true,

  "snippets.ultisnips.directories": [
    "~/.vim/plugged/vim-snippets/snippets",
    "~/.vim/plugged/vim-javascript-snippets/snippets/javascript"
  ],
  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescriptreact": ["javascript", "javascript-jasmine-arrow"],
    "typescript": ["javascript", "javascript-jasmine-arrow"]
  },

  "suggest.noselect": false,
  "suggest.enablePreview": true,
  "suggest.removeDuplicateItems": true,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.floatEnable": true,
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf15d",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },

  "coc.preferences.extensionUpdateCheck": "never",
  "coc.preferences.jumpCommand": "drop",
  "coc.preferences.rootPatterns": [".git", ".vim", ".vscode"],
  "coc.preferences.snippets.enable": true,
  "coc.preferences.bracketEnterImprove": true,
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "Markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.useQuickfixForLocations": true,
  "coc.source.emoji.filetypes": null,

  "list.source.grep.useLiteral": false,
  "list.previewSplitRight": true,
  "list.source.grep.command": "rg",
  "lists.disabledLists": [ "tags" ],
  "list.autoResize": true,

  "session.directory": "~/.config/nvim/tmp/dir_session",
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "elmPath": "elm", // optional
        "elmFormatPath": "elm-format", // optional
        "elmTestPath": "elm-test", // optional
        "elmAnalyseTrigger": "change" // optional
      }
    }
  }
}
